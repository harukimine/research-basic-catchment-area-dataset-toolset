{
    "git.autofetch": true,
    "git.confirmSync": false,
    "files.exclude": {
        "**/.git": false
    },
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter",
        "editor.formatOnSave": true
    },
    "black-formatter.args": [
        "--line-length=120"
    ],
    "[flake8]": {
        "editor.defaultFormatter": "ms-python.python",
        "editor.formatOnSave": true
    },
    "flake8.args": [
        "--max-line-length=120"
    ],
    "editor.inlineSuggest.enabled": true,
    "editor.formatOnSave": true,
}